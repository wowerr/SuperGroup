<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="work">
    <insert id="create" parameterType="work" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO db_demo.work VALUES (
            NULL,
            #{workUnit},
            #{position},
            #{studentId}
        );
    </insert>
    <resultMap id="work_map" type="work">
        <id property="id" column="id"/>
        <result property="workUnit" column="workUnit"/>
        <result property="position" column="position"/>
        <association property="student" javaType="student">
            <id property="id" column="student_id"/>
            <result property="username" column="username"/>
        </association>
    </resultMap>
    <select id="queryWork" resultMap="work_map">
        SELECT
            w.id,
            w.workUnit,
            w.position,
            s.id AS student_id,
            s.username
        FROM db_demo.work w INNER JOIN db_demo.student s
                ON w.studentId = s.id;
    </select>
    <resultMap id="workById_map" type="work">
        <id property="id" column="id"/>
        <result property="workUnit" column="workUnit"/>
        <result property="position" column="position"/>
        <result property="studentId" column="studentId"/>
        <association property="student" javaType="student">
            <id property="id" column="student_id"/>
            <result property="username" column="username"/>
        </association>
    </resultMap>
    <select id="queryWorkById" resultMap="workById_map">
        SELECT
            w.id,
            w.workUnit,
            w.position,
            w.studentId,
            s.id AS student_id,
            s.username
        FROM db_demo.work w INNER JOIN db_demo.student s
                ON w.studentId = s.id
        WHERE w.id =#{id};
    </select>
    <update id="modify">
        UPDATE db_demo.work
        SET
            workUnit = #{workUnit}, position = #{position}, studentId = #{studentId}
        WHERE id = #{id};
    </update>
    <delete id="remove">
        DELETE FROM db_demo.work
        WHERE id =#{id}
    </delete>
</mapper>